<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.task.TaskLogFragment">

    <View
        android:id="@+id/divider14"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Task Log"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider13" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="256dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:text="Task"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        app:icon="@drawable/icons8_chevron_left_30"
        app:iconPadding="0dp"
        app:iconTint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />

    <View
        android:id="@+id/divider13"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />


    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider14">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="4"
                android:paddingTop="6dp"
                android:text="202110100001"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_text_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="4"
                android:padding="3dp"
                android:text="Restore Database"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_text_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="4"
                android:padding="3dp"
                android:text="01 October 2021"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_text_color" />

            <TextView
                android:id="@+id/textview33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="4"
                android:padding="3dp"
                android:text="15:00 - 17:00"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_text_color" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="4"
                android:paddingTop="6dp"
                android:text="202110100002"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_text_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="4"
                android:padding="3dp"
                android:text="Bug Fixing"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_text_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="4"
                android:padding="3dp"
                android:text="01 October 2021"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_text_color" />

            <TextView
                android:id="@+id/textview37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="4"
                android:padding="3dp"
                android:text="17:00 - 20:00"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_text_color" />
        </LinearLayout>
    </TableRow>

    <Button
        android:id="@+id/button8"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/roundedbutton"
        android:text="+"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textsize="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>